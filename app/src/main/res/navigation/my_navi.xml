<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_nav"
    app:startDestination="@+id/mHome">


    <fragment
        android:id="@+id/homeFragment"
        android:name="com.cotion.it_consultiong.UI.Main.FragmentHome"

        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_listFragment_to_updateFragment"
            app:destination="@id/action_listFragment_to_updateFragment"
            app:enterAnim="@anim/from_left"
            app:exitAnim="@anim/to_right"
            app:popEnterAnim="@anim/from_right"
            app:popExitAnim="@anim/to_left" />
        <action
            android:id="@+id/action_homeFragment_to_chatFragment"
            app:destination="@id/chatFragment" />
        <action
            android:id="@+id/action_homeFragment_to_boardFragment"
            app:destination="@id/boardFragment" />
    </fragment>

    <fragment
        android:id="@+id/chatFragment"
        android:name="com.cotion.it_consultiong.UI.FragmentChat"
        tools:layout="@layout/fragment_chat">
        <action
            android:id="@+id/action_addFragment_to_listFragment"
            app:destination="@id/homeFragment"
            app:enterAnim="@anim/from_left"
            app:exitAnim="@anim/to_right"
            app:launchSingleTop="false"
            app:popUpTo="@id/homeFragment"
            app:popUpToInclusive="true" />
    </fragment>


    <fragment
        android:id="@+id/boardFragment"
        android:name="com.cotion.it_consultiong.UI.Main.FragmentBoard"
        tools:layout="@layout/fragment_board">

        <action
            android:id="@+id/action_boardFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_boardFragment_to_chatFragment"
            app:destination="@id/chatFragment" />
    </fragment>
</navigation>