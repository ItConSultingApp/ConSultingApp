<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/login_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/app_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="110dp"
        android:fontFamily="@font/sdsamliphopangchebasic"
        android:gravity="center"
        android:text="COTION"
        android:textColor="@color/login_txt"
        android:textSize="70dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="cotion"
        android:layout_below="@+id/app_name"
        android:gravity="center"
        android:fontFamily="@font/tmoneyroundwindextrabold"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/login_txt"
        />


    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="80dp"
        >
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/sign_in"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/login_sign_up_btn"
            android:onClick="SignInLogin"
            android:text="@string/sign_in"
            android:textSize="15dp"
            android:fontFamily="@font/tmoneyroundwindextrabold"
            android:textColor="@color/login_txt"
            android:layout_marginBottom="20dp"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/sign_in_google"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="40dp"
            android:textSize="15dp"
            android:text="구글로 로그인하기"
            android:textColor="@color/login_txt"
            android:background="@drawable/login_sign_up_btn"
            android:fontFamily="@font/tmoneyroundwindextrabold"
            />





