<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background">


    <ImageView
        android:id="@+id/background_logo"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_centerInParent="true"
        android:src="@drawable/logo" />


    <TextView
        android:id="@+id/app_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="110dp"

        android:fontFamily="@font/samliphopangcheoutline"
        android:gravity="center"
        android:text="COTION"
        android:textColor="@color/login_txt"
        android:textSize="70dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/app_name"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/tmoneyroundwindextrabold"
        android:gravity="center"
        android:text="@string/app_login_introduction"
        android:textColor="@color/login_txt"
        android:textSize="20dp" />


    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="80dp"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/sign_in"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@drawable/login_sign_up_btn"
            android:fontFamily="@font/tmoneyroundwindextrabold"
            android:text="@string/sign_in"
            android:textColor="@color/login_txt"
            android:textSize="15dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/sign_in_google"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="40dp"
            android:background="@drawable/login_sign_up_btn"
            android:fontFamily="@font/tmoneyroundwindextrabold"
            android:text="구글로 로그인하기"
            android:textColor="@color/login_txt"
            android:textSize="15dp" />


        <TextView
            android:id="@+id/forgot_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/tmoneyroundwindextrabold"
            android:gravity="center"
            android:text="@string/forgot_password"
            android:textColor="@color/login_txt"

            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/sign_up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/login_sign_up_btn"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/tmoneyroundwindextrabold"
            android:gravity="center"
            android:onClick="signUp"
            android:padding="10dp"
            android:text="@string/sign_up"
            android:textColor="@color/login_txt"
            android:textSize="15dp"

            />
    </LinearLayout>


</RelativeLayout>